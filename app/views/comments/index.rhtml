	<option value="S America"<%= ' selected' if params[:continent] == 'S America' %>>S AMERICA</option>
	<option value="Europe"<%= ' selected' if params[:continent] == 'Europe' %>>EUROPE</option>
	<option value="Asia"<%= ' selected' if params[:continent] == 'Asia' %>>ASIA</option>
	<option value="Australia"<%= ' selected' if params[:continent] == 'Australia' %>>AUSTRALIA</option>
</select>
</p>

<p class="country">
<select name="country" onchange="this.form.submit();">
