	<option value="">GENRE</option>
	<option value="Slasher"<%= ' selected' if params[:continent] == 'Slasher' %>>SLASHER</option>
	<option value="Monster"<%= ' selected' if params[:continent] == 'Monster' %>>MONSTER</option>
